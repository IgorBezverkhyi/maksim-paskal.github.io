</style><script type="text/javascript">
function hideAll()
{
    document.getElementById("titleId").style.display="none";
    document.getElementById("smilesId").style.display="none";
    document.getElementById("answersIdBad").style.display="none";
    document.getElementById("answersIdGood").style.display="none";
}
function showAnswers(rate)
{
	hideAll();
    document.forms[0].form_rate.value = rate;

    if (rate <= 3)
    {
         document.getElementById("answersIdBad").style.display="inline";
    }
    else
    {
         document.getElementById("answersIdGood").style.display="inline";
    }

}
function formSave()
{
    var r = document.forms[0].form_rate.value;

    if (r == "") {
        alert("Укажите оценку;");
        return false;
    }

    if (r <= 3 && !getRadioValue('form_feedback')) {
        alert("Укажите значение!");
        return false;
    }

    if (r <= 3 && getRadioValue('form_feedback').value == "Other" && document.getElementById("comment_required_text").value.trim().length < 3) {
        alert("Укажите комментарий!");
        return false;
    }
    return true;
}
function getRadioValue(name)
{
    var options = document.getElementsByName(name);
    for(i = 0; i < options.length; i++)
    {
        var opt = options[i];
        if(opt.type=="radio" && opt.checked)
        {
           return opt;     
        }
    }
}
function radioChange()
{
    var e = getRadioValue('form_feedback');

    if (e && e.value == "Other")
    {
        document.getElementById("comment_required").style.display="inline";
    }
    else
    {
        document.getElementById("comment_required").style.display="none";
    }
}
window.onload = function(e){
    document.forms[0].form_referer.value = document.referrer;

    var searchParams = new URLSearchParams(window.location.search);

    document.forms[0].form_user.value = searchParams.get("u");
    document.forms[0].kb_Updatedby.value = searchParams.get("Updatedby");
    document.forms[0].kb_CreatedBy.value = searchParams.get("CreatedBy");

    var ms_ie = false;
    var ua = window.navigator.userAgent;
    var old_ie = ua.indexOf('MSIE ');
    var new_ie = ua.indexOf('Trident/');
    if ((old_ie > -1) || (new_ie > -1)) {
        ms_ie = true;
    }

    if(ms_ie)
    {
        /*OMG its IE*/
       document.getElementById("ancient").style.display="inline";
       document.getElementById("content").style.display="none";
       document.body.style.backgroundColor="#84B013";
    }
}
</script>
